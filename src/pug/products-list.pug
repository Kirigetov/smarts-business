                .s-tabs__content.js-tabs-content
                  .s-filters
                    .s-filter.s-filter_static
                      .s-filter__title 
                        span Производитель:
                      ul.s-filter__list
                        - var values = [ "Apple", "HTC", "Lenovo", "LG" ]
                        each item in values
                          li.s-filter__item
                            label.checkbox
                              input(type="checkbox")
                              span.checkbox__text= item

                      ul.s-filter__list.s-filter__list_hidden.js-toggle-block(data-toggle="brands")
                        - var values = [ "Nillkin", "Nokia", "ODOYO", "Ozaki" ]
                        each item in values
                          li.s-filter__item
                            label.checkbox
                              input(type="checkbox")
                              span.checkbox__text= item
